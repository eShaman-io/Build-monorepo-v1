rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own data.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Rituals are private to the user who created them.
    match /rituals/{ritualId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Consultations with the Oracle are private.
    match /consultations/{consultationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Billing information is private.
    match /billing/{billingId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Events are write-only for authenticated users, and unreadable.
    match /events/{eventId} {
      allow read: if false;
      allow write: if request.auth != null;
    }
  }
}
