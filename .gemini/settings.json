  "fileFiltering": {
    "respectGitIgnore": true
  },
  // Require confirmation before running potentially destructive commands.
  "autoAccept": false,
  // Enable checkpointing to allow /restore after file changes.
  "checkpointing": {
    "enabled": true
  }
}