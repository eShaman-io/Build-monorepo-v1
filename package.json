{
  "name": "eshaman-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "test": "jest",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "tsc -p . --noEmit",
    "format": "prettier --write .",
    "ci": "npm run typecheck && npm run lint && npm run test && npx lhci autorun",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@vitest/coverage-v8": "^3.2.4",
    "babel-jest": "^30.1.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.1.6",
    "nx": "21.5.2",
    "prettier": "^3.2.5",
    "react-test-renderer": "^18.3.1",
    "ts-jest": "^29.4.1",
    "tsconfig": "*",
    "turbo": "^1.12.4",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.15.6",
  "version": "1.0.0",
  "description": "Unzip this at the repo root. Start Gemini tasks from `project-specs`.",
  "main": "jest.config.js",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "eslint-scope": "^7.2.2",
    "eslint-visitor-keys": "^3.4.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
